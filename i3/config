# power management mode
set $power_management System: [d]Shutdown       [l]LockScreen       [h]Hibernate        [s]Suspend      [r]Reboot       [o]Logout
bindsym $mod+Shift+p mode "$power_management"
mode "$power_management" {
    bindsym d exec --no-startup-id systemctl poweroff, mode "default"
        bindsym r exec --no-startup-id systemctl reboot, mode "default"
#bindsym s exec --no-startup-id systemctl suspend, mode "default"
#bindsym h exec --no-startup-id systemctl hibernate, mode "default"
        bindsym l exec --no-startup-id i3lock -c '#000000', mode "default"
        bindsym o exec --no-startup-id i3-msg exit, mode "default"

# back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

